<?xml version="1.0" encoding="UTF-8"?>
<customUI xmlns="http://schemas.microsoft.com/office/2009/07/customui" onLoad="Ribbon_Load">
	<ribbon>
		<tabs>
			<tab id="TabGameDoc" label="游戏文档">
				<group id="GroupDesign" label="策划文档">
					<button id="BtnDesignDashboardTable" label="面板表单" onAction="BtnDesignDashboardTable_OnAction"/>
					<button id="BtnDesignModelTable" label="模型表单" onAction="BtnDesignModelTable_OnAction"/>
					<button id="BtnDesignSaveTable" label="存档表单" onAction="BtnDesignSaveTable_OnAction"/>
					<button id="BtnDesignEnumTable" label="枚举表单" onAction="BtnDesignEnumTable_OnAction"/>

					<separator id="SepDesign1"/>

					<box id="BoxDesign1">
						<button id="BtnDesignPropertyType" label="数值类型" onAction="BtnDesignPropertyType_OnAction"/>
						<dropDown id="CkbDesignPropertyType" showLabel="false" getItemCount="CkbDesignPropertyType_GetItemCount" getItemID="CkbDesignPropertyType_GetItemID" getItemLabel="CkbDesignPropertyType_GetItemLabel" getSelectedItemIndex="CkbDesignPropertyType_GetSelectedItemIndex" onAction="CkbDesignPropertyType_OnAction"/>
					</box>
					<box id="BoxDesign2">
						<button id="BtnDesignPropertySource" label="数值来源" onAction="BtnDesignPropertySource_OnAction"/>
						<dropDown id="CkbDesignPropertySource" showLabel="false" getItemCount="CkbDesignPropertySource_GetItemCount" getItemID="CkbDesignPropertySource_GetItemID" getItemLabel="CkbDesignPropertySource_GetItemLabel" getSelectedItemIndex="CkbDesignPropertySource_GetSelectedItemIndex" onAction="CkbDesignPropertySource_OnAction"/>
					</box>
					<button id="BtnDesignSimpleProperty" label="简单属性" onAction="BtnDesignSimpleProperty_OnAction"/>

					<separator id="SepDesign2"/>
					
					<button id="BtnDesignCompoundPropertyInt" label="复合属性（整型）" onAction="BtnDesignCompoundPropertyInt_OnAction"/>
					<button id="BtnDesignCompoundPropertyFloat" label="复合属性（浮点）" onAction="BtnDesignCompoundPropertyFloat_OnAction"/>
				</group>

				<group id="GroupDevelop" label="开发文档">
					<button id="BtnDevelopPropertyTable" label="属性表单" onAction="BtnDevelopPropertyTable_OnAction"/>
					<button id="BtnDevelopEventTable" label="事件表单" onAction="BtnDevelopEventTable_OnAction"/>
					<button id="BtnDevelopMethodTable" label="方法表单" onAction="BtnDevelopMethodTable_OnAction"/>
					<button id="BtnDevelopEnumTable" label="枚举表单" onAction="BtnDevelopEnumTable_OnAction"/>

					<separator id="SepDevelop1"/>

					<box id="BoxDevelop1">
						<button id="BtnDevelopPropertyType" label="数值类型" onAction="BtnDevelopPropertyType_OnAction"/>
						<dropDown id="CkbDevelopPropertyType" showLabel="false" getItemCount="CkbDevelopPropertyType_GetItemCount" getItemID="CkbDevelopPropertyType_GetItemID" getItemLabel="CkbDevelopPropertyType_GetItemLabel" getSelectedItemIndex="CkbDevelopPropertyType_GetSelectedItemIndex" onAction="CkbDevelopPropertyType_OnAction"/>
					</box>
				</group>
			</tab>
		</tabs>
	</ribbon>
</customUI>

